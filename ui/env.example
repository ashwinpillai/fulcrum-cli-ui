# Fulcrum CLI UI Environment Variables
# Copy this file to .env and fill in your actual values

# API Endpoints
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_ACTIVITY_LOG_URL=http://localhost:3000/activity-log.html
REACT_APP_COMMAND_OUTPUT_URL=http://localhost:3000/command-output.html

# Security
REACT_APP_ENABLE_RATE_LIMITING=true
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOGIN_TIMEOUT_MINUTES=15

# IP Geolocation Services (optional)
REACT_APP_IP_API_ENDPOINT=https://ipapi.co
REACT_APP_IPIFY_ENDPOINT=https://api.ipify.org

# Feature Flags
REACT_APP_ENABLE_ACTIVITY_LOGGING=true
REACT_APP_ENABLE_IP_GEOLOCATION=true
REACT_APP_ENABLE_TEMPORARY_ACCESS=true
